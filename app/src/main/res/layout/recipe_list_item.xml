<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/iv_recipe_image"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/tv_recipe_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/tv_recipe_time"
        android:padding="16dp"
        android:layout_marginLeft="170dp"
        app:fontFamily="@font/poppins"/>

    <TextView
        android:id="@+id/tv_recipe_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/tv_recipe_serving"
        app:drawableStartCompat="@drawable/ic_action_time"
        android:drawablePadding="4dp"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="170dp"
        android:padding="16dp"
        app:fontFamily="@font/poppins"/>

    <TextView
        android:id="@+id/tv_recipe_serving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_action_serving"
        android:drawablePadding="4dp"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="170dp"
        android:padding="16dp"
        app:fontFamily="@font/poppins"/>

</com.google.android.material.card.MaterialCardView>