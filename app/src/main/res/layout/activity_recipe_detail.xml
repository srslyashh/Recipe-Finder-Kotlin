<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">



    <TextView
        android:id="@+id/tv_recipe_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp" />


    <ImageView
        android:id="@+id/iv_recipe_image"
        android:layout_width="380dp"
        android:layout_height="160dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="30dp"
        />


    <TextView
        android:id="@+id/tv_recipe_serving"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="195dp"
        android:drawablePadding="4dp"
        android:padding="16dp"
        android:text="     servings"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_action_serving"
        app:fontFamily="@font/poppins" />


    <TextView
        android:id="@+id/tv_recipe_time"
        android:title=" mins"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="195dp"
        android:drawablePadding="4dp"
        android:padding="16dp"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_action_time"
        app:fontFamily="@font/poppins"
        app:layout_constraintBottom_toTopOf="@id/tv_recipe_serving" />

    <TextView
        android:id="@+id/tv_recipe_ingredients"
        android:text="Ingredients"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="295dp"
        android:drawablePadding="4dp"
        android:padding="16dp"
        android:textSize="16sp"
        app:fontFamily="@font/poppins"
        app:layout_constraintBottom_toTopOf="@id/tv_recipe_serving" />



    <TextView
        android:id="@+id/tv_recipe_Instructions"
        android:text="Instructions"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="495dp"
        android:drawablePadding="4dp"
        android:padding="16dp"
        android:textSize="16sp"
        app:fontFamily="@font/poppins"
        app:layout_constraintBottom_toTopOf="@id/tv_recipe_serving" />




</com.google.android.material.card.MaterialCardView>
